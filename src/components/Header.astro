---
import { Image } from "astro:assets";
import DLogo from "../assets/images/desktoplogo.svg";
import MLogo from "../assets/images/mobillogo.svg";
---
<header>
    <div class="relative flex items-center md:p-4 z-50 py-4">
      <!-- Logo -->
      <div class="absolute">
        <a href="/startside"><Image
          src={DLogo}
          alt="Desktop logo"
          class="md:block hidden md:h-32 md:w-32 pl-s"
        /><Image
        src={MLogo}
        alt="Mobil logo"
        class="block md:hidden w-12 h-12"
      /></a>
      </div>

          <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-20 md:py-2 md:flex-grow md:justify-center font-poppins md:text-link text-mgron500 font-semibold">
        <a href="/cafe" class="hover:text-mgron700 hover:scale-105">Caféen</a>
        <a href="/butik" class="hover:text-mgron700 hover:scale-105">Butikken</a>
        <a href="/arrangementer" class="hover:text-mgron700 hover:scale-105">Arrangementer</a>
        <a href="/om" class="hover:text-mgron700 hover:scale-105">Om os</a>
        <a href="/kontakt" class="hover:text-mgron700 hover:scale-105">Kontakt</a>
      </nav>
  
      <!-- Hamburger Button -->
      <button 
        id="menu-toggle" 
        class="absolute right-4 top-1/2 transform -translate-y-1/2 z-40 flex flex-col justify-center items-center h-8 w-8 focus:outline-none md:hidden"
        aria-label="Toggle Menu">
        <span class="block w-6 h-0.5 bg-mgron500 transition-all duration-300 origin-center"></span>
        <span class="block w-6 h-0.5 bg-mgron500 mt-1.5 transition-all duration-300 origin-center"></span>
        <span class="block w-6 h-0.5 bg-mgron500 mt-1.5 transition-all duration-300 origin-center"></span>
      </button>
    </div>
  
    <!-- Mobile Menu -->
    <nav 
      id="mobile-menu" 
      class="fixed top-0 overflow-hidden left-0 w-full h-auto bg-sgron200 transform -translate-y-full transition-transform duration-500 ease-in-out z-30 md:hidden font-poppins text-mlink font-semibold"
    >
      <ul class="flex flex-col items-center justify-center h-auto py-6 pt-16 space-y-6 text-mlink text-mgron500">
        <li><a href="/cafe" class="hover:text-mgron700">Caféen</a></li>
        <li><a href="/butik" class="hover:text-mgron700">Butikken</a></li>
        <li><a href="/arrangementer" class="hover:text-mgron700">Arrangementer</a></li>
        <li><a href="/om" class="hover:text-mgron700">Om os</a></li>
        <li><a href="/kontakt" class="hover:text-mgron700">Kontakt</a></li>
      </ul>
    </nav>
  </header>
<script>
    const menuToggle = document.getElementById('menu-toggle');
const mobileMenu = document.getElementById('mobile-menu');
const spans = menuToggle.querySelectorAll('span');

menuToggle.addEventListener('click', () => {
  const isOpen = mobileMenu.classList.contains('translate-y-0');

  // Toggle menu visibility
  mobileMenu.classList.toggle('translate-y-0', !isOpen);
  mobileMenu.classList.toggle('-translate-y-full', isOpen);

  // Animate icon (Hamburger to Cross)
  spans[0].classList.toggle('rotate-45', !isOpen);
  spans[0].classList.toggle('translate-y-2', !isOpen);

  spans[1].classList.toggle('opacity-0', !isOpen);

  spans[2].classList.toggle('-rotate-45', !isOpen);
  spans[2].classList.toggle('-translate-y-2', !isOpen);
});
</script>  