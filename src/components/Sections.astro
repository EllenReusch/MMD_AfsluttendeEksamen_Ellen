---
import { Image } from "astro:assets";
import Button from '../components/Button.astro';

export interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonType: 'primary' | 'secondary';
  image: { src: string; alt: string };
  layout?: 'image-left' | 'image-right'; // Dette gør at man frit kan vælge layout
}

const { title, description, buttonText, buttonType = 'primary', image, layout = 'image-left' } = Astro.props;
---
<div class={`mx-auto flex flex-col ${layout === 'image-left' ? 'md:flex-row' : 'md:flex-row-reverse'} items-center justify-center px-s py-s md:px-s md:py-xl`}>
  <!-- Billede -->
  <div class="md:w-1/2 flex justify-center items-center mt-m md:mb-0 md:p-s order-2 md:order-1">
    <Image src={image.src} alt={image.alt} class="object-obtain w-full md:w-auto h- md:h-full" />
  </div>
  
  <!-- Tekstindhold -->
  <div class="font-poppins text-pdefault w-full md:w-1/2 text-left md:ml-xxl ml-0 md:mb-m mb-m order-1 md:order-2">
    <h3 class="text-mnormalh4 md:text-normalh3 font-poppins font-semibold md:mb-m mb-m">{title}</h3>
    <p class="text-mpnormal md:pnormal md:mb-m mb-m">{description}</p>
    <a href=""><Button variant={buttonType}>{buttonText}</Button></a>
  </div>
</div>
